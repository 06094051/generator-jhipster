/* tslint:disable no-unused-expression */
import { element, by, browser } from 'protractor';

import NavBarPage from '../../page-objects/navbar-page';
import { waitUntilDisplayed } from '../../util/utils';

const expect = chai.expect;

describe('Administration', () => {
  let navBarPage: NavBarPage;

  before(() => {
    navBarPage = new NavBarPage(true);
    navBarPage.autoSignIn();
  });

  describe('User management', () => {
    it('should load user management', async () => {
      navBarPage.clickOnAdminMenuItem('user-management');
      // Title should contain 'Users'
      expect(await element(by.css('h2#page-heading')).getText()).to.contain('Users');
    });

    it('should delete previously created fake user', async () => {
      browser.get('#/admin/user-management/user_test/delete');
      const deleteModal = element(by.className('modal'));
      waitUntilDisplayed(deleteModal);
      element(by.buttonText('Delete')).click();
      // Delete modal should disappear
      expect(await deleteModal.isPresent()).to.be.false;
    });
  });

  it('should load metrics', async () => {
    navBarPage.clickOnAdminMenuItem('metrics');
    expect(await element(by.css('h2#page-heading')).getText()).to.contain('Application Metrics');
  });

  it('should load health', async () => {
    navBarPage.clickOnAdminMenuItem('health');
    expect(await element(by.css('h2#page-heading')).getText()).to.contain('Health Checks');
  });

  it('should load configuration', async () => {
    navBarPage.clickOnAdminMenuItem('configuration');
    expect(await element(by.css('h2#page-heading')).getText()).to.contain('Configuration');
  });

  it('should load audits', async () => {
    navBarPage.clickOnAdminMenuItem('audits');
    expect(await element(by.css('h2#page-heading')).getText()).to.contain('Audits');
  });

  it('should load logs', async () => {
    navBarPage.clickOnAdminMenuItem('logs');
    expect(await element(by.css('h2#page-heading')).getText()).to.contain('Logs');
  });

  after(() => {
    navBarPage.autoSignOut();
  });
});
