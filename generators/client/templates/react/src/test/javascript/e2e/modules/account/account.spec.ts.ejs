import { browser } from 'protractor';

import SignInPage from '../../page-objects/signin-page';
import PasswordPage from '../../page-objects/password-page';
import NavBarPage from '../../page-objects/navbar-page';
import RegisterPage from '../../page-objects/register-page';
import { SettingsPage } from '../../page-objects/settings-page';
import { getDeactivatedButtonbyLogin, waitUntilDisplayed } from '../../util/utils';

const expect = chai.expect;

describe('Account', () => {
  let navBarPage: NavBarPage;
  let signInPage: SignInPage;
  let passwordPage: PasswordPage;
  let settingsPage: SettingsPage;
  let registerPage: RegisterPage;

  const pageTitle = 'Sign in';

  before(() => {
    navBarPage = new NavBarPage();
    signInPage = navBarPage.signInPage;
    signInPage.get();
  });

  it('should fail to login with bad password', async () => {
    // Login page should appear
    expect(await signInPage.getTitle()).to.eq(pageTitle);
    signInPage.autoSignInUsing('admin', 'foo');
    // Login page should stay open when login fails
    expect(await signInPage.getTitle()).to.eq(pageTitle);
    signInPage.clearForm();
  });

  it('should login with admin account', async () => {
    // Login page should appear
    expect(await signInPage.getTitle()).to.eq(pageTitle);
    signInPage.autoSignInUsing('admin', 'admin');
    signInPage.waitUntilHidden();
    // Login page should close when login success
    expect(await signInPage.isHidden()()).to.eq(true);

    navBarPage.autoSignOut();
  });

  it('should be able to sign up', async () => {
    registerPage = navBarPage.getRegisterPage();
    registerPage.autoSignUpUsing('user_test', 'usertest@jhipster.com', 'user_test');
    <%_ if (enableTranslation) { _%>
    const toast = registerPage.getToastByClassName('register.messages.success');
    <%_ } else { _%>
    const toast = registerPage.getToastByInnerText('<strong>Registration saved!</strong> Please check your email for confirmation.');
    <%_ } _%>
    waitUntilDisplayed(toast);

    expect(await toast.isPresent()).to.eq(true);
    registerPage.clearForm();
  });

  it('should not be able to sign up if login already taken', async () => {
    registerPage.autoSignUpUsing('user_test', 'usertest@jhipster.com', 'user_test');
    <%_ if (enableTranslation) { _%>
    const toast = registerPage.getToastByClassName('error.userexists');
    <%_ } else { _%>
    const toast = registerPage.getToastByInnerText('Login already in use');
    <%_ } _%>
    waitUntilDisplayed(toast);

    expect(await toast.isPresent()).to.eq(true);
  });

  it('should not be able to sign up if email already taken', async () => {
    registerPage.autoSignUpUsing('user_test2', 'usertest@jhipster.com', 'user_test2');
    <%_ if (enableTranslation) { _%>
    const toast = registerPage.getToastByClassName('error.emailexists');
    <%_ } else { _%>
    const toast = registerPage.getToastByInnerText('Email address already in use');
    <%_ } _%>
    waitUntilDisplayed(toast);

    expect(await toast.isPresent()).to.eq(true);
  });

  it('should activate the new registered user', async () => {
    navBarPage.autoSignIn();

    browser.get('#/admin/user-management');
    const deactivatedButton = getDeactivatedButtonbyLogin('user_test');
    deactivatedButton.click();

    expect(await deactivatedButton.isPresent()).to.eq(false);

    navBarPage.autoSignOut();
  });

  it('should be able to log in with new registered account', async () => {
    signInPage.get();

    signInPage.autoSignInUsing('user_test', 'user_test');
    signInPage.waitUntilHidden();

    expect(await signInPage.isHidden()()).to.eq(true);

    navBarPage.autoSignOut();
  });

  it('should fail to update password when using incorrect current password', async () => {
    navBarPage.autoSignIn();
    passwordPage = navBarPage.getPasswordPage();
    passwordPage.autoChangePassword('wront_current_password', 'new_password', 'new_password');
    <%_ if (enableTranslation) { _%>
    const toast = passwordPage.getToastByClassName('password.messages.error');
    <%_ } else { _%>
    const toast = passwordPage.getToastByInnerText('<strong>An error has occurred!</strong> The password could not be changed.');
    <%_ } _%>
    waitUntilDisplayed(toast);

    expect(await toast.isPresent()).to.eq(true);
    passwordPage.clearForm();
  });

  it('should be able to update password', async () => {
    passwordPage = navBarPage.getPasswordPage();
    passwordPage.autoChangePassword('admin', 'newpassword', 'newpassword');
    <%_ if (enableTranslation) { _%>
    const toast = passwordPage.getToastByClassName('password.messages.success');
    <%_ } else { _%>
    const toast = passwordPage.getToastByInnerText('<strong>Password changed!</strong>');
    <%_ } _%>
    waitUntilDisplayed(toast);

    expect(await toast.isPresent()).to.eq(true);

    navBarPage.autoSignOut();
  });

  it('should be able to log in with new password', async () => {
    signInPage.get();
    signInPage.autoSignInUsing('admin', 'newpassword');
    signInPage.waitUntilHidden();
    // expect(await signInPage.isHidden()()).to.eq(true);

    // change back to default
    passwordPage = navBarPage.getPasswordPage();
    passwordPage.autoChangePassword('newpassword', 'admin', 'admin');

    navBarPage.autoSignOut();
  });

  it('should be able to change settings', async () => {
    navBarPage.autoSignIn();

    settingsPage = navBarPage.getSettingsPage();
    settingsPage.clearEmail();
    settingsPage.setEmail('admin@jhipster.com');
    settingsPage.save();

    <%_ if (enableTranslation) { _%>
    const toast = settingsPage.getToastByClassName('settings.messages.success');
    <%_ } else { _%>
    const toast = settingsPage.getToastByInnerText('<strong>Settings saved!</strong>');
    <%_ } _%>
    waitUntilDisplayed(toast);

    expect(await toast.isPresent()).to.eq(true);

    navBarPage.autoSignOut();
  });

  it('should not be able to change settings if email already exists', async () => {
    signInPage.get();

    signInPage.autoSignInUsing('user', 'user');
    signInPage.waitUntilHidden();

    settingsPage = navBarPage.getSettingsPage();
    settingsPage.clearEmail();
    settingsPage.setEmail('admin@jhipster.com');
    settingsPage.save();

    <%_ if (enableTranslation) { _%>
    const toast = passwordPage.getToastByClassName('error.emailexists');
    <%_ } else { _%>
    const toast = settingsPage.getToastByInnerText('<strong>Email is already in use!</strong> Please choose another one.');
    <%_ } _%>
    waitUntilDisplayed(toast);

    expect(await toast.isPresent()).to.eq(true);
  });

  after(() => signInPage.autoSignOut());
});
