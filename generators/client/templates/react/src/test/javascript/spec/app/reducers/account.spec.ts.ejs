import { expect } from 'chai';
import { REQUEST, SUCCESS, FAILURE } from '../../../../../main/webapp/app/reducers/action-type.util';

import account, { ACTION_TYPES } from '../../../../../main/webapp/app/reducers/account';

describe('Account reducer tests', () => {
  function isAccountEmpty(state): boolean {
    return Object.keys(state.account).length === 0;
  }

  describe('Common tests', () => {
    it('should return the initial state', () => {
      const toTest = account(undefined, {});
      expect(toTest).to.contain({
        loading: false,
        errorMessage: null,
        updateSuccess: false,
        updateFailure: false
      });
      expect(isAccountEmpty(toTest));
    });
  });

  describe('Account update', () => {
    it('should detect a request', () => {
      const toTest = account(undefined, { type: REQUEST(ACTION_TYPES.UPDATE_ACCOUNT) });
      expect(toTest).to.contain({
        updateSuccess: false,
        updateFailure: false,
        loading: true
      });
      expect(isAccountEmpty(toTest));
    });
    it('should detect a success', () => {
      const payloadValue = { data: 'fancy payload' };
      const toTest = account(undefined, { type: SUCCESS(ACTION_TYPES.UPDATE_ACCOUNT), payload: payloadValue });
      expect(toTest).to.contain({
        updateSuccess: true,
        updateFailure: false,
        loading: false,
        account: 'fancy payload'
      });
    });
    it('should detect a failure', () => {
      const toTest = account(undefined, { type: FAILURE(ACTION_TYPES.UPDATE_ACCOUNT) });
      expect(toTest).to.contain({
        updateSuccess: false,
        updateFailure: true,
        loading: false
      });
      expect(isAccountEmpty(toTest));
    });
  });

  describe('Password update', () => {
    it('should detect a request', () => {
      const toTest = account(undefined, { type: REQUEST(ACTION_TYPES.UPDATE_PASSWORD) });
      expect(toTest).to.contain({
        updateSuccess: false,
        updateFailure: false,
        loading: true
      });
      expect(isAccountEmpty(toTest));
    });
    it('should detect a success', () => {
      const toTest = account(undefined, { type: SUCCESS(ACTION_TYPES.UPDATE_PASSWORD) });
      expect(toTest).to.contain({
        updateSuccess: true,
        updateFailure: false,
        loading: false
      });
      expect(isAccountEmpty(toTest));
    });
    it('should detect a failure', () => {
      const toTest = account(undefined, { type: FAILURE(ACTION_TYPES.UPDATE_PASSWORD) });
      expect(toTest).to.contain({
        updateSuccess: false,
        updateFailure: true,
        loading: false
      });
      expect(isAccountEmpty(toTest));
    });
  });
});
